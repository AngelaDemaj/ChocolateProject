@model Chocolate.DataAccess.ViewModels.OfferViewModel

@{
    ViewData["Title"] = "Offers";
}

<h2>Edit Offer</h2>
<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="Edit">
                        

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Name">Name</label>
                            <div class="col-md-10">
                                <input asp-for="Name" class="form-control">
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>


                        <div class="form-group row">
                            <label asp-for="DateCreated" class="col-md-2 col-form-label">Date Created</label>
                            <div class="col-md-10">
                                <input asp-for="DateCreated" class="form-control" />
                            </div>
                            <span asp-validation-for="DateCreated" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="ReviewDeadline" class="col-md-2 col-form-label">Review Deadline</label>
                            <div class="col-md-10">
                                <input asp-for="ReviewDeadline" class="form-control" />
                            </div>
                            <span asp-validation-for="ReviewDeadline" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="DateReviewed" class="col-md-2 col-form-label">Date Reviewed</label>
                            <div class="col-md-10">
                                <input asp-for="DateReviewed" class="form-control" />
                            </div>
                            <span asp-validation-for="DateReviewed" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="EmployeeId" class="col-md-2 col-form-label">Author</label>
                            <div class="col-md-10">
                                <select asp-for="EmployeeId" class="form-control" asp-items='@(new SelectList(Model.Employees, "Id", "FullName"))'></select>
                            </div>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="SupplierId" class="col-md-2 col-form-label">Supplier</label>
                            <div class="col-md-10">
                                <select asp-for="SupplierId" class="form-control" asp-items='@(new SelectList(Model.Suppliers, "Id", "Name"))'></select>
                            </div>
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="DiscountLevelId" class="col-md-2 col-form-label">Discount level</label>
                            <div class="col-md-10">
                                <select asp-for="DiscountLevelId" class="form-control" asp-items='@(new SelectList(Model.DiscountLevels, "Id", "Id"))'></select>
                            </div>
                            <span asp-validation-for="DiscountLevelId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-bordered-primary waves-effect  width-md waves-light">Save</button>
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
