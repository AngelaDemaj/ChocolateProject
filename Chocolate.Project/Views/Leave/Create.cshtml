@using Chocolate.DataAccess.Models.Enums
@model Chocolate.DataAccess.ViewModels.LeaveViewModel

@{
    ViewData["Title"] = "Leaves";
}

@section Styles{
    <link rel="stylesheet" href="~/assets/libs/dropify/dropify.min.css" type="text/css" />
}

<h1>Create</h1>

<h4>Leave</h4>
<hr />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">

                    <form asp-action="Create" enctype="multipart/form-data">

                        <div class="form-group row">
                            <label asp-for="LeaveType" class="col-md-2 col-form-label">Leave Type</label>
                            <div class="col-md-10">
                                <select asp-for="LeaveType" class="form-control" asp-items="Html.GetEnumSelectList<LeaveType>()"></select>
                            </div>
                            <span asp-validation-for="LeaveType" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="StartDate">Start Date</label>
                            <div class="col-md-10">
                                <input type="date" value="" asp-for="StartDate" class="form-control">
                            </div>
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="NumberOfDays">Number Of Days</label>
                            <div class="col-md-10">
                                <input asp-for="NumberOfDays" min="1" max="20" class="form-control" id="example-date" type="number">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="File">Upload File</label>
                            <div class="col-md-10">
                                <input type="file" class="dropify" id="CV" asp-for="File" data-height="250">
                            </div>
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-bordered-primary waves-effect  width-md waves-light">Submit</button>
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/assets/libs/dropify/dropify.min.js"></script>
    <script src="~/assets/js/pages/form-fileupload.init.js"></script>
}
