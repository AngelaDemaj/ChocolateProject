@using Chocolate.DataAccess.Models.Enums
@model Chocolate.DataAccess.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Employees";
}

<h2>Edit Employee</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">
                    <form asp-action="Edit">

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="FirstName">First Name</label>
                            <div class="col-md-10">
                                <input asp-for="FirstName" class="form-control">
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="LastName">Last Name</label>
                            <div class="col-md-10">
                                <input asp-for="LastName" class="form-control">
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="DepartmentId">Department</label>
                            <div class="col-md-10">
                                <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(Model.Departments,"Id","Name"))"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="DateOfBirth">Date Of Birth</label>
                            <div class="col-md-10">
                                <input type="date" asp-for="DateOfBirth" class="form-control">
                            </div>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Phone Number</label>
                            <div class="col-md-8">
                                <input type="text" asp-for="PhoneNumber" class="form-control" />
                            </div>
                            <div class="col-md-2">
                                <select asp-for="Phone.PhoneType" class="form-control" asp-items="Html.GetEnumSelectList<PhoneType>()"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Email</label>
                            <div class="col-md-8">
                                <input type="text" asp-for="Email" class="form-control" readonly="readonly"/>
                            </div>
                            <div class="col-md-2">
                                <select asp-for="Mail.MailType" class="form-control" asp-items="Html.GetEnumSelectList<MailType>()"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Address.Location" class="col-md-2 col-form-label">Street Name</label>
                            <div class="col-md-7">
                                <input type="text" id="simpleinput" asp-for="Address.Location" class="form-control" />
                            </div>

                            <label asp-for="Address.AddressNumber" class="col-md-1 col-form-label">Street Number</label>
                            <div class="col-md-2">
                                <input type="text" id="simpleinput" asp-for="Address.AddressNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="Address.Location" class="text-danger"></span>
                            <span asp-validation-for="Address.AddressNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Address.Country" class="col-md-2 col-form-label">Country</label>
                            <div class="col-md-2">
                                <input type="text" id="simpleinput" asp-for="Address.Country" class="form-control" />
                            </div>

                            <label asp-for="Address.PostCode" class="col-md-1 col-form-label">Postal Code</label>
                            <div class="col-md-1">
                                <input type="text" id="simpleinput" asp-for="Address.PostCode" class="form-control" />
                            </div>

                            <label asp-for="Address.Comments" class="col-md-1 col-form-label">Comments</label>
                            <div class="col-md-5">
                                <input type="text" id="simpleinput" asp-for="Address.Comments" class="form-control" />
                            </div>
                            <span asp-validation-for="Address.Country" class="text-danger"></span>
                            <span asp-validation-for="Address.PostCode" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="HireDate">Hire Date</label>
                            <div class="col-md-10">
                                <input type="date" asp-for="HireDate" class="form-control">
                            </div>
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="WorkExperience">Work Experience</label>
                            <div class="col-md-10">
                                <textarea asp-for="WorkExperience" class="form-control" rows="5" id="example-textarea"></textarea>
                            </div>
                            <span asp-validation-for="WorkExperience" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">UserName</label>
                            <div class="col-md-10">
                                <input readonly="readonly" asp-for="IdentityUser.UserName" class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" asp-for="IsHeadOfDepartment" />
                                <label class="custom-control-label" asp-for="IsHeadOfDepartment">Is Head Of Department?</label>
                            </div>
                        </div>

                        <button asp-action="Index" type="submit" class="btn btn-bordered-primary waves-effect  width-md waves-light">Save</button>
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}