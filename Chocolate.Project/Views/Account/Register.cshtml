@model ChocolateProject.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="row">
                <div class="col-12">
                    <div class="p-4">
                        <form asp-action="Register">

                            <div class="form-group-row">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" asp-for="UserName">User Name*</label>
                                    <div class="col-md-12">
                                        <input asp-for="UserName" class="form-control">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group-row">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" asp-for="Email">Email Address*</label>
                                    <div class="col-md-12">
                                        <input asp-for="Email" class="form-control">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group-row">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" asp-for="Password">Password*</label>
                                    <div class="col-md-12">
                                        <input asp-for="Password" class="form-control">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group-row">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label" asp-for="ConfirmPassword">Confirm Password*</label>
                                    <div class="col-md-12">
                                        <input asp-for="ConfirmPassword" class="form-control">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-success waves-effect width-md waves-light">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>