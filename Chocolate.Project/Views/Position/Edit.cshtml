@model Chocolate.DataAccess.ViewModels.PositionViewModel

@{
    ViewData["Title"] = "Positions";
}

<h2>Edit Position</h2>
<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="Edit">

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Name">Title</label>
                            <div class="col-md-10">
                                <input asp-for="Name" class="form-control">
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="DepartmentId">Department</label>
                            <div class="col-md-10">
                                <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(Model.Departments,"Id","Name"))"></select>
                            </div>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Description">Description</label>
                            <div class="col-md-10">
                                <textarea asp-for="Description" class="form-control" rows="5" id="example-textarea"></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Degree">Degree</label>
                            <div class="col-md-10">
                                <textarea asp-for="Degree" class="form-control" rows="5" id="example-textarea"></textarea>
                            </div>
                            <span asp-validation-for="Degree" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="WorkExperience">Work Experience</label>
                            <div class="col-md-10">
                                <textarea asp-for="WorkExperience" class="form-control" rows="5" id="example-textarea"></textarea>
                            </div>
                            <span asp-validation-for="WorkExperience" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Languages">Languages</label>
                            <div class="col-md-10">
                                <textarea asp-for="Languages" class="form-control" rows="5" id="example-textarea"></textarea>
                            </div>
                            <span asp-validation-for="Languages" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Qualifications">Qualifications</label>
                            <div class="col-md-10">
                                <textarea asp-for="Qualifications" class="form-control" rows="5" id="example-textarea"></textarea>
                            </div>
                            <span asp-validation-for="Qualifications" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input type="checkbox" class="custom-control-input" asp-for="IsActive" />
                                <label class="custom-control-label" asp-for="IsActive">Active</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-bordered-primary waves-effect  width-md waves-light">Save</button>
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}