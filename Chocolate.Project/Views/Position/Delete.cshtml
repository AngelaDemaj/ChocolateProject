@model Chocolate.DataAccess.ViewModels.PositionViewModel

@{
    ViewData["Title"] = "Positions";
}


<h3>Are you sure you want to delete this Position?</h3>
<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">
                    <form>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Name">Title</label>
                            <div class="col-md-10">
                                <input readonly="readonly" asp-for="Name" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="DepartmentId">Department</label>
                            <div class="col-md-10">
                                <input readonly="readonly" asp-for="DepartmentId" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Description" class="col-md-2 col-form-label">Description</label>
                            <div class="col-md-10">
                                <input asp-for="Description" class="form-control" readonly="readonly" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Degree" class="col-md-2 col-form-label">Degree</label>
                            <div class="col-md-10">
                                <input asp-for="Degree" class="form-control" readonly="readonly" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="WorkExperience" class="col-md-2 col-form-label">Work Experience</label>
                            <div class="col-md-10">
                                <input asp-for="WorkExperience" class="form-control" readonly="readonly" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Languages" class="col-md-2 col-form-label">Languages</label>
                            <div class="col-md-10">
                                <input asp-for="Languages" class="form-control" readonly="readonly" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Qualifications" class="col-md-2 col-form-label">Qualifications</label>
                            <div class="col-md-10">
                                <input asp-for="Qualifications" class="form-control" readonly="readonly" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input asp-for="IsActive" class="custom-control-input" disabled />
                                <label class="custom-control-label" asp-for="IsActive">Active</label>
                            </div>
                        </div>
                    </form>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-bordered-danger waves-effect  width-md waves-light">
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>