@model Chocolate.DataAccess.ViewModels.DiscountViewModel

@{
    ViewData["Title"] = "Discounts";
}

<h2>Are you sure you want to delete this Discount?</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-3">
                    <form>
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="EndDate" class="col-md-2 col-form-label">Ending Date</label>
                            <div class="col-md-10">
                                <input asp-for="EndDate" class="form-control" readonly="readonly" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Supplier.Name" class="col-md-2 col-form-label">Supplier</label>
                            <div class="col-md-10">
                                <input asp-for="Supplier.Name" class="form-control" readonly="readonly">
                            </div>
                        </div>
                    </form>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-bordered-danger waves-effect  width-md waves-light">
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
