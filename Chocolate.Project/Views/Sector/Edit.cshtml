@model Chocolate.DataAccess.ViewModels.SectorViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Sector</h2>
<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="Edit">

                        <div class="form-group row">
                            <label asp-for="Name" class="col-md-2 col-form-label">Name</label>
                            <div class="col-md-10">
                                <input asp-for="Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="StorageUnitId" class="control-form-label col-md-2">Storage Unit</label>
                            <div class="col-md-10">
                                <select asp-for="StorageUnitId" class="form-control" asp-items='@(new SelectList(Model.StorageUnits,"Id","Id"))'></select>
                            </div>
                            <span asp-validation-for="StorageUnitId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-bordered-primary waves-effect  width-md waves-light">Save</button>
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
