@model Chocolate.DataAccess.ViewModels.DepartmentViewModel

@{
    ViewData["Title"] = "Departments";
}

<h2>Are you sure you want to delete this Department?</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-3">
                    <form>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Name">Department</label>
                            <div class="col-md-10">
                                <input readonly="readonly" asp-for="Name" class="form-control" />
                            </div>
                        </div>
                    </form>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-bordered-danger waves-effect  width-md waves-light">
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
