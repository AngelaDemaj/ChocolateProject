@model Chocolate.DataAccess.ViewModels.DepartmentViewModel
@{
    ViewData["Title"] = "Departments";
}

<h2>Department Details</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-3">
                    <form asp-action="Edit">

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Name">Department</label>
                            <div class="col-md-10">
                                <input readonly="readonly" asp-for="Name" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Employees">Employees in the Department</label>
                            <div class="col-md-10">
                                <select asp-for="Employees" class="form-control" asp-items="@(new SelectList(Model.Employees,"Id","LastName"))"></select>
                            </div>
                        </div>

                        <div>

                            <a asp-action="Edit" class="btn btn-lighten-primary waves-effect waves-primary width-md" asp-route-id="@Model.Id">Edit</a>
                            <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

