@model Chocolate.DataAccess.ViewModels.DiscountLevelViewModel

@{
    ViewData["Title"] = "Discount Levels";
}

<h2>Create new Discount</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">
                    <form class="form-horizontal" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <label asp-for="Amount" class="col-md-2 col-form-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Amount" type="number" class="form-control" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="DiscountPercentage" class="col-md-2 col-form-label">Discount Percentage</label>
                            <div class="col-md-10">
                                <input asp-for="DiscountPercentage" type="number" step="0.1" class="form-control" />
                            </div>
                            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="DiscountId" class="col-md-2 col-form-label">Discount</label>
                            <div class="col-md-10">
                                <select asp-for="DiscountId" class="form-control" asp-items='@(new SelectList(Model.Discounts,"Id","Id"))'></select>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-bordered-primary waves-effect  width-md waves-light">Submit</button>
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
