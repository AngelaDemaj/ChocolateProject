@model Chocolate.DataAccess.ViewModels.StorageUnitViewModel

@{
    ViewData["Title"] = "Storage Units";
}
<h2>Storage Unit Details</h2>
<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">
                    <form>

                        <div class="form-group row">
                            <label asp-for="Name" class="col-md-2 col-form-label">Name</label>
                            <div class="col-md-10">
                                <input asp-for="Name" class="form-control" readonly/>
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-md-2" asp-for="WarehouseId">Warehouse</label>
                            <div class="col-md-10">
                                <input asp-for='WarehouseAddress[Model.WarehouseId]' class="form-control" readonly="readonly" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-md-2" asp-for="StorageUnitSectors">Sectors</label>
                            <div class="col-md-10">
                                <input asp-for="StorageUnitSectors" class="form-control" readonly="readonly" />
                            </div>
                        </div>

                        <a asp-action="Edit" class="btn btn-lighten-primary waves-effect waves-primary width-md" asp-route-id="@Model.Id">Edit</a>
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
