@model Chocolate.DataAccess.ViewModels.StorageUnitViewModel

@{
    ViewData["Title"] = "Storage Units";
}

<h2>Create new Storage Unit</h2>
<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="Create">

                        <div class="form-group row">
                            <label asp-for="Name" class="col-md-2 col-form-label">Name</label>
                            <div class="col-md-10">
                                <input asp-for="Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="WarehouseId">Warehouse</label>
                            <div class="col-md-10">
                                <select asp-for="WarehouseId" class="form-control" asp-items='@(new SelectList(Model.Warehouses,"Id","Name"))'></select>
                            </div>
                            <span asp-validation-for="WarehouseId" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="NumberOfSectors">Number of Sectors</label>
                            <div class="col-md-10">
                                <input asp-for="NumberOfSectors" class="form-control" />
                            </div>
                            <span asp-validation-for="NumberOfSectors" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-bordered-primary waves-effect  width-md waves-light">Submit</button>
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
