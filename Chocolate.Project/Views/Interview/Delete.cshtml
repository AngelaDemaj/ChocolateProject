@model Chocolate.DataAccess.ViewModels.InterviewViewModel

@{
    ViewData["Title"] = "Interviews";
}

<h2>Are you sure you want to delete this Interview?</h2>
<hr />
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">
                    <form>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Candidate.FirstName">Candidate</label>
                            <div class="col-md-10">
                                <input readonly="readonly" asp-for="Candidate.FirstName" class="form-control">
                            </div>

                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Employee.LastName">Employee</label>
                            <div class="col-md-10">
                                <input readonly="readonly" asp-for="Employee.LastName" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="DateOfInterview" class="col-md-2 col-form-label">Date of the Interview</label>
                            <div class="col-md-10">
                                <input asp-for="DateOfInterview" class="form-control" readonly="readonly" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Rating">Rating</label>
                            <div class="col-md-10">
                                <input readonly="readonly" asp-for="Rating" class="form-control" min="0" max="5"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Comments">Comments</label>
                            <div class="col-md-10">
                                <textarea readonly="readonly" asp-for="Comments" class="form-control" rows="5" id="example-textarea"></textarea>
                            </div>
                        </div>
                    </form>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-bordered-danger waves-effect  width-md waves-light">
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
