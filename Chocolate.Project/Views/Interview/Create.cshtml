@model Chocolate.DataAccess.ViewModels.InterviewViewModel

@{
    ViewData["Title"] = "Interviews";
}

<h2>Create new Interview</h2>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">
                    <form asp-action="Create" enctype="multipart/form-data">

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="CandidateId">Candidate to Interview</label>
                            <div class="col-md-10">
                                <select asp-for="CandidateId" class="form-control" asp-items="@(new SelectList(Model.Candidates,"Id", "LastName"))"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="EmployeeId">Employee for the Interview</label>
                            <div class="col-md-10">
                                <select asp-for="EmployeeId" class="form-control" asp-items="@(new SelectList(Model.Employees,"Id", "LastName"))"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="DateOfInterview">Date of the Interview</label>
                            <div class="col-md-10">
                                <input type="datetime-local" value="" asp-for="DateOfInterview" class="form-control" />
                            </div>
                            <span asp-validation-for="DateOfInterview" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Rating">Candidate Rating</label>
                            <div class="col-md-10">
                                <input asp-for="Rating" class="form-control" min="0" max="5">
                               
                            </div>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2 col-form-label" asp-for="Comments">Comments</label>
                            <div class="col-md-10">
                                <textarea asp-for="Comments" class="form-control" rows="5" id="example-textarea"></textarea>
                            </div>
                            <span asp-validation-for="Comments" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-bordered-primary waves-effect  width-md waves-light">Submit</button>
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

