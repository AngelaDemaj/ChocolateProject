@model Chocolate.DataAccess.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Products";
}


<h3>Are you sure you want to delete this Product?</h3>
<hr />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card-box">
                <div class="p-2">
                    <form>

                        <div class="form-group row">
                            <label asp-for="Barcode" class="col-md-2 col-form-label">Barcode</label>
                            <div class="col-md-10">
                                <input asp-for="Barcode" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Name" class="col-md-2 col-form-label">Name</label>
                            <div class="col-md-10">
                                <input asp-for="Name" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Description" class="col-md-2 col-form-label">Description</label>
                            <div class="col-md-10">
                                <textarea asp-for="Description" class="form-control" readonly></textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Price" class="col-md-2 col-form-label">Price</label>
                            <div class="col-md-10">
                                <input asp-for="Price" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Weight" class="col-md-2 col-form-label">Weight</label>
                            <div class="col-md-10">
                                <input asp-for="Weight" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Category" class="col-md-2 col-form-label">Category</label>
                            <div class="col-md-10">
                                <input asp-for="Category" class="form-control" readonly />
                            </div>
                        </div>
                    </form>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-bordered-danger waves-effect  width-md waves-light">
                        <a asp-action="Index" class="btn btn-lighten-primary waves-effect waves-primary width-md">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}